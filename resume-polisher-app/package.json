{
  "name": "resume-polisher-app",
  "version": "1.0.0",
  "description": "Electron Desktop App for AI-powered Resume Polishing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:vite": "vite",
    "build": "vite build",
    "build:electron": "electron-builder",
    "build:all": "npm run build && npm run build:electron",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "resume",
    "AI",
    "electron",
    "llm",
    "job-search"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "cheerio": "^1.0.0",
    "grapesjs": "^0.21.10",
    "js-yaml": "^4.1.0",
    "marked": "^12.0.0",
    "openai": "^4.67.3",
    "playwright": "^1.44.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.resumepolisher.app",
    "productName": "Resume Polisher",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Office"
    }
  }
}
